#include <iostream>     // Подключаем библиотеку для ввода-вывода
#include <vector>       // Подключаем библиотеку для работы с динамическими массивами (vector)
using namespace std;    // Используем стандартное пространство имён

// Функция для проверки, является ли символ гласной
bool isVowel(char c) {
    c = tolower(c);  // Приводим символ к нижнему регистру
    return (c=='a'||c=='e'||c=='i'||c=='o'||c=='u'||c=='y'); // Проверяем, входит ли символ в список гласных
}

int main() {
    char arr[] = {'a','b','o','t','e','x','i'};  // Исходный массив символов
    int n = sizeof(arr)/sizeof(arr[0]);           // Определяем количество элементов в массиве

    vector<char> vowels, consonants;  // Векторы для хранения гласных и согласных

    // Перебираем все элементы массива
    for (int i = 0; i < n; i++) {
        if (isVowel(arr[i]))           // Если буква — гласная
            vowels.push_back(arr[i]);  // Добавляем её в список гласных
        else
            consonants.push_back(arr[i]); // Иначе добавляем в список согласных
    }

    cout << "Гласные: ";                // Выводим гласные
    for (char v : vowels) cout << v << " ";
    cout << "\nСогласные: ";            // Выводим согласные
    for (char c : consonants) cout << c << " ";
    cout << endl;

    return 0;  // Завершаем программу
}
